<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.ModStep1AuthCodeActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ms1_auth_code_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/ms1_auth_code_back"
            android:layout_width="50dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/navigation_bar_back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="身份认证"
            android:textColor="#FF1A1A1A"
            android:textSize="22dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="请输入您收到的验证码"
            android:textColor="#B3B3B3"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ms1_auth_code_iv_1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/signin_mobile_phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/ms1_auth_code_iv_1"
                android:text="验证码"
                android:textColor="#FF1A1A1A"
                android:textSize="16dp"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginLeft="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="40dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ms1_auth_code_et_1"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_edit"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ms1_auth_code_et_2"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_edit"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ms1_auth_code_et_3"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_edit"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/ms1_auth_code_et_4"
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_edit"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="1"
                    android:textCursorDrawable="@null" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/ms1_auth_code_notice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="验证码已发送至188 8888 8888"
            android:textColor="#FFE6E6E6"
            android:textSize="14dp"/>
        <TextView
            android:id="@+id/ms1_auth_code_submit"
            android:layout_marginTop="45dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_finish"
            android:elevation="15dp"
            android:text="重新发送"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp"/>
    </LinearLayout>

    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/ms1_auth_code_loading"
        android:visibility="gone"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>