<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyBalanceActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#FFF4F4F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/phis_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="历史消费记录"
                android:textColor="#000"
                android:textSize="18dp"/>
            <RelativeLayout
                android:id="@+id/phis_back"
                android:layout_width="50dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/navigation_bar_back"/>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/phis_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="近3个月"
                android:textSize="21dp"
                android:textColor="#1A1A1A"/>
            <TextView
                android:id="@+id/phis_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="近6个月"
                android:textSize="16dp"
                android:textColor="#B3B3B3"/>
            <TextView
                android:id="@+id/phis_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="近1年"
                android:textSize="16dp"
                android:textColor="#B3B3B3"/>
        </LinearLayout>
        <ListView
            android:id="@+id/phis_lv"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</FrameLayout>