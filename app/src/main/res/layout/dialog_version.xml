<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10000000">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_dialog">
            <RelativeLayout
                android:id="@+id/diav_title_rl"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/bg_dialog_head">
                <TextView
                    android:id="@+id/diav_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="系统提示"
                    android:textSize="18dp"
                    android:textColor="#fff"/>
            </RelativeLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/diav_title_rl"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/diav_content"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:text=""
                    android:textSize="14dp"
                    android:textColor="#FF7A7A7A"/>
            </ScrollView>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_dialog_b"
                android:layout_width="match_parent"
                android:layout_height="44dp">
                <RelativeLayout
                    android:id="@+id/diav_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dialog_l"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0.5dp">
                    <TextView
                        android:id="@+id/diav_cancel_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="取消"
                        android:textSize="18dp"
                        android:textColor="#FFB3B3B3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/diav_confirm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dialog_r"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp">
                    <TextView
                        android:id="@+id/diav_confirm_tv"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="立即升级"
                        android:textSize="18dp"
                        android:textColor="#FF1A1A1A"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>