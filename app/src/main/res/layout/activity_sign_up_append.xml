<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignUpAppendActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/sapp_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/sapp_back"
            android:layout_width="50dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/navigation_bar_back"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="补充资料"
            android:textColor="#FF1A1A1A"
            android:textSize="22dp"/>
        <TextView
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商祺会采用实名登记，为避免影响会员权益请如实填写"
            android:textColor="#B3B3B3"
            android:textSize="16dp"/>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/sapp_et_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请输入真实姓名"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sapp_et_1"
                android:layout_marginTop="10dp"
                android:background="#eee"></RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <RadioGroup
                android:id="@+id/sapp_rg"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/sapp_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:checked="true"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_select"
                    android:drawablePadding="5dp"
                    android:text="男"
                    android:textColor="#666"
                    android:textSize="14dp"/>
                <RadioButton
                    android:id="@+id/sapp_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableLeft="@drawable/radio_select"
                    android:drawablePadding="5dp"
                    android:text="女"
                    android:textColor="#666"
                    android:textSize="14dp"/>
            </RadioGroup>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/sapp_rg"
                android:layout_marginTop="10dp"
                android:background="#eee"></RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/sapp_submit"
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:background="@drawable/btn_finish"
            android:gravity="center"
            android:elevation="15dp"
            android:text="确定"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp" />
    </LinearLayout>
    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/sapp_loading"
        android:visibility="gone"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:id="@+id/sapp_loadingbar"
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>