<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <in.srain.cube.views.ptr.PtrFrameLayout
        android:id="@+id/ptr_frame_layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:cube_ptr="http://schemas.android.com/apk/res-auto"

        cube_ptr:ptr_resistance_header="1.7"
        cube_ptr:ptr_ratio_of_header_height_to_refresh="1.2"
        cube_ptr:ptr_duration_to_back_header="300"
        cube_ptr:ptr_duration_to_close_header="2000"
        cube_ptr:ptr_keep_header_when_refresh="true"
        cube_ptr:ptr_pull_to_fresh="false"

        cube_ptr:ptr_resistance_footer="1.3"
        cube_ptr:ptr_duration_to_back_footer="300"
        cube_ptr:ptr_duration_to_close_footer="2000">
        <ListView
            android:id="@+id/order_lv_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:dividerHeight="8dp"
            android:fadingEdge="none"
            android:fastScrollEnabled="false"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:footerDividersEnabled="false"
            android:headerDividersEnabled="false"
            android:smoothScrollbar="true">
        </ListView>
        <RelativeLayout
            android:id="@+id/frg1_layer"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/frg1_tv_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="63dp"
                android:text="暂无订单"
                android:textColor="#808080"
                android:textSize="16dp"/>
            <TextView
                android:id="@+id/frg1_book"
                android:gravity="center"
                android:layout_below="@+id/frg1_tv_1"
                android:layout_marginTop="175dp"
                android:layout_centerHorizontal="true"
                android:layout_width="155dp"
                android:layout_height="45dp"
                android:background="@drawable/btn_finish"
                android:elevation="15dp"
                android:text="立即预订"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp"/>
        </RelativeLayout>
    </in.srain.cube.views.ptr.PtrFrameLayout>
    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/frg1_loading"
        android:visibility="gone"
        android:background="#10000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>