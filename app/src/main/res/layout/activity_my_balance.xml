<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MyBalanceActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#FFF4F4F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/bala_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@drawable/tab4_head">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/tab4_head">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="@color/transparent"
                android:gravity="center"
                android:text="帐户余额"
                android:textColor="#FFFFFF"
                android:textSize="18dp"/>
            <RelativeLayout
                android:id="@+id/bala_back"
                android:layout_width="50dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/navigation_bar_back_white"/>
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="128dp"
            android:background="@drawable/tab4_head">
            <TextView
                android:id="@+id/bala_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:text="可用余额"
                android:textSize="14dp"
                android:textColor="#808080"/>
            <TextView
                android:id="@+id/bala_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/bala_tv1"
                android:text="¥"
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/bala_sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="2dp"
                android:layout_below="@+id/bala_tv1"
                android:layout_toRightOf="@+id/bala_tv2"
                android:text="1000"
                android:textSize="22dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="16dp"
                android:layout_below="@+id/bala_sum"
                android:text="充值最高返10%"
                android:textSize="12dp"
                android:textColor="#FFFFFF"/>
            <TextView
                android:id="@+id/bala_charge"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/btn_golden"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="16dp"
                android:text="充值"
                android:textSize="16dp"
                android:textColor="#E0BC5A"/>
        </RelativeLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/bala_date1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="16dp"
                android:text="近3个月"
                android:textSize="21dp"
                android:textColor="#1A1A1A"/>
            <TextView
                android:id="@+id/bala_date2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="近6个月"
                android:textSize="16dp"
                android:textColor="#B3B3B3"/>
            <TextView
                android:id="@+id/bala_date3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="24dp"
                android:text="近1年"
                android:textSize="16dp"
                android:textColor="#B3B3B3"/>
        </LinearLayout>
        <ListView
            android:id="@+id/bala_lv"
            android:layout_marginTop="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>
    </LinearLayout>
</FrameLayout>