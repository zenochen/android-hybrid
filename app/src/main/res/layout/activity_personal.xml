<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.PersonalActivity">
    <LinearLayout
        android:orientation="vertical"
        android:background="#FFF4F4F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/pers_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:background="#fff"
                android:gravity="center"
                android:text="个人资料"
                android:textColor="#000"
                android:textSize="18dp"/>
            <RelativeLayout
                android:id="@+id/pers_back"
                android:layout_width="50dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/navigation_bar_back"/>
            </RelativeLayout>
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:background="#FFF4F4F4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="基本信息"
                        android:textColor="#666"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/pers_tv_modify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:text="修改"
                        android:textColor="#FFE0BC5A"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="姓名"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/pers_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="性别"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/pers_tv_sex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="出生日期"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/pers_tv_birthday"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="证件类型"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/pers_tv_cardtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="证件信息"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/pers_tv_cardinfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/pers_tv_notice0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:text="完善必填资料奖励100积分 / 当前完成度 "
                        android:textColor="#888"
                        android:textSize="14dp"/>
                    <TextView
                        android:id="@+id/pers_tv_process"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/pers_tv_notice0"
                        android:text="0%"
                        android:textColor="#888"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="15dp"
                    android:text="安全信息"
                    android:textColor="#666"
                    android:textSize="14dp"/>
                <RelativeLayout
                    android:id="@+id/pers_mobile"
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:background="#fff"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="手机号"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <ImageView
                        android:id="@+id/pers_iv_mobile"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/pers_tv_mobile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/pers_iv_mobile"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/pers_email"
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="1dp"
                    android:layout_height="45dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:text="邮箱"
                        android:textColor="#000"
                        android:textSize="16dp"/>
                    <ImageView
                        android:id="@+id/pers_iv_email"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/arrow"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"/>
                    <TextView
                        android:id="@+id/pers_tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:layout_toLeftOf="@+id/pers_iv_email"
                        android:text=""
                        android:textColor="#666"
                        android:textSize="14dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="#fff"
                    android:layout_marginTop="30dp"
                    android:layout_height="45dp">
                    <TextView
                        android:id="@+id/pers_tv_setpwd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:text="修改密码"
                        android:textColor="#FFE0BC5A"
                        android:textSize="16dp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/pers_loading"
        android:visibility="gone"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>