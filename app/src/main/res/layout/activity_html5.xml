<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Html5Activity">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/html5_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/html5_title_layer"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:visibility="gone"
            android:background="#fff">
            <TextView
                android:id="@+id/html5_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:gravity="center"
                android:singleLine="true"
                android:ellipsize="end"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp"/>
            <RelativeLayout
                android:id="@+id/html5_close"
                android:layout_width="50dp"
                android:layout_height="44dp">
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/close"/>
            </RelativeLayout>
            <RelativeLayout
                android:background="#CCC"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="0.3dp"></RelativeLayout>
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/html5_linear"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></LinearLayout>
    </LinearLayout>
    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/html5_loading"
        android:visibility="gone"
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>