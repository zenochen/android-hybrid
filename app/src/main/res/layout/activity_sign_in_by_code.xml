<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SignInByCodeActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/signcode_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/signcode_back"
                    android:layout_width="50dp"
                    android:layout_height="44dp">
                    <ImageView
                        android:layout_width="10dp"
                        android:layout_height="18dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/navigation_bar_back"/>
                </RelativeLayout>
                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="92dp"
                    android:layout_gravity="center"
                    android:src="@drawable/logo_black"/>
                <RelativeLayout
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/signcode_iv_1"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:background="@drawable/signin_mobile_phone" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/signcode_iv_1"
                        android:text="手机号码"
                        android:textColor="#FF1A1A1A"
                        android:textSize="16dp" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/signcode_tv_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#1A1A1A"
                        android:textSize="16dp"
                        android:text="+86"/>
                    <EditText
                        android:id="@+id/signcode_et_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="25dp"
                        android:layout_toRightOf="@+id/signcode_tv_1"
                        android:layout_marginLeft="20dp"
                        android:inputType="number"
                        android:background="@null"
                        android:textCursorDrawable="@null"
                        android:hint="请输入手机号码"/>
                    <ImageView
                        android:id="@+id/signcode_iv_clear"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/controls_clear"/>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_below="@+id/signcode_et_account"
                        android:layout_marginTop="10dp"
                        android:background="#eee">
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/signcode_signin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:text="密码登录"
                        android:textColor="#FF1A1A1A"
                        android:textSize="16dp"/>
                </RelativeLayout>
                <TextView
                    android:id="@+id/signcode_get"
                    android:layout_width="155dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/btn_finish"
                    android:elevation="15dp"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="30dp"
                android:layout_centerHorizontal="true"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我已阅读并同意"
                    android:textColor="#808080"
                    android:textSize="14dp"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:autoLink="all"
                        android:text="《开元商祺会基本规定》"
                        android:textColor="#FFE0BC5A"
                        android:textSize="14dp"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginRight="8dp"
                        android:layout_marginLeft="8dp"
                        android:background="#FFE0BC5A"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
    
    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/signcode_loading"
        android:visibility="gone"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>

    <!--对话框-->
    <RelativeLayout
        android:id="@+id/signcode_dialog"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#10000000">

        <RelativeLayout
            android:layout_width="295dp"
            android:layout_height="162dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_dialog">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:text="账号尚未注册"
                android:textSize="18dp"
                android:textColor="#000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="54dp"
                android:layout_marginRight="24dp"
                android:layout_marginLeft="24dp"
                android:layout_centerHorizontal="true"
                android:text="手机号18888888888尚未注册，现在注册可领500元礼包，专享会员优惠"
                android:textSize="14dp"
                android:textColor="#FF1A1A1A"/>
            <LinearLayout
                android:layout_alignParentBottom="true"
                android:background="@drawable/bg_dialog_b"
                android:layout_width="match_parent"
                android:layout_height="44dp">

                <RelativeLayout
                    android:id="@+id/signcode_dialog_cancel"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dialog_l"
                    android:layout_marginTop="1dp"
                    android:layout_marginRight="0.5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="取消"
                        android:textSize="18dp"
                        android:textColor="#FFB3B3B3"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/signcode_dialog_register"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/bg_dialog_r"
                    android:layout_marginTop="1dp"
                    android:layout_marginLeft="0.5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="直接注册"
                        android:textSize="18dp"
                        android:textColor="#FFE0BC5A"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</FrameLayout>