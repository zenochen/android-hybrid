<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetPhoneEmailActivity">

    <LinearLayout
        android:orientation="vertical"
        android:background="#fff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/setemail_status_bar"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:background="@color/statusbar">
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/setemail_back"
            android:layout_width="50dp"
            android:layout_height="44dp">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/navigation_bar_back"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/setemail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="设置新邮箱"
            android:textColor="#FF1A1A1A"
            android:textSize="22dp"/>
        <TextView
            android:id="@+id/setemail_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:text="请设置邮箱"
            android:textColor="#B3B3B3"
            android:textSize="16dp"/>
        <RelativeLayout
            android:layout_marginTop="40dp"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/setemail_iv_1"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:background="@drawable/profile_mailbox"/>
            <TextView
                android:id="@+id/setemail_subtitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/setemail_iv_1"
                android:text="邮箱"
                android:textColor="#FF1A1A1A"
                android:textSize="16dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginLeft="30dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/setemail_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:inputType="text"
                android:background="@null"
                android:textCursorDrawable="@null"
                android:hint="请输入新邮箱"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/setemail_et"
                android:layout_marginTop="10dp"
                android:background="#eee"></RelativeLayout>
            <ImageView
                android:id="@+id/setemail_iv_clear"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/controls_clear"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/setemail_get"
            android:layout_marginTop="75dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="155dp"
            android:layout_height="45dp"
            android:background="@drawable/btn_finish"
            android:elevation="15dp"
            android:text="获取验证码"
            android:textColor="#FFFFFFFF"
            android:textSize="18dp"/>
    </LinearLayout>
    <!-- 进度条 -->
    <RelativeLayout
        android:id="@+id/setemail_loading"
        android:visibility="gone"
        android:background="#22000000"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ProgressBar
            android:layout_centerInParent="true"
            android:indeterminateTint="#1A1A1A"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </RelativeLayout>
</FrameLayout>